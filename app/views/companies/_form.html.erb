<h1>Add Company</h1>
<%= form_for @company do |form| %>
  <% if @company.errors.any? %>
  <div id="error_explanation">
  <h2>
  <%= pluralize(@company.errors.count, "error") %> prohibited this billing from being saved:
  </h2>
  <ul>
<% @company.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
   <% end %>
   </ul>
    </div>
<% end %>
    
<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name%>
</div><br>
    
<div>
  <%= form.label :country, class: 'form-label' %>
  <%= form.collection_select :country_id, Country.order(:id), :id, :country_name %>
  </div>
  <div>
    <%= form.label :state, class: 'form-label' %>
    <%= form.collection_select :state_id, State.order(:id), :id, :state_name %>
  </div>
  <div>
    <%= form.label :city, class: 'form-label' %>
    <%= form.collection_select :city_id, City.order(:id), :id, :city_name %>
  </div>

<div class="field">
  <%= form.label :postcode %>
  <%= form.text_field :postcode%>
</div><br>

<div class="field">
  <%= form.label :start_date %>
  <%= form.date_field  :start_date%>
</div><br>

<div class="field">
  <%= form.label :active %>
  <%= form.check_box :active %>
</div><br>

<%= form.submit"Save" %>
  
<% end %>